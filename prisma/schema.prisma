generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id        Int      @id @default(autoincrement())
  email     String   @unique // Mark email as unique
  name      String
  club      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Posters {
  id        Int      @id @default(autoincrement())
  eventId   String
  image     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Events {
  id                      Int    @id @default(autoincrement())
  eventId                 String @unique
  amount                  Int
  startDate               String
  endDate                 String
  startTime               String
  endTime                 String
  studentCoordinatorName  String
  studentCoordinatorEmail String
  studentCoordinatorId    String
  studentCoordinatorPhone String
  emailAddress            String
  employeeId              String
  employeeName            String
  school                  String
  clubName                String
  eventName               String
  eventType               String
  subEventType            String @default("N/A")
  eventDescription        String
  eventPoster             String
  link                    String
}
